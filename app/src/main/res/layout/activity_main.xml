<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lety.testcheck.MainActivity">

    <LinearLayout
        android:id="@+id/linearlayout_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/innerlayout_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/button_start"
                android:layout_gravity="center"
                android:text="@string/textview_start"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/button_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_button"
                android:onClick="onStartButton"
                app:srcCompat="@android:drawable/ic_media_play" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="91dp"
            android:layout_margin="@dimen/innerlayout_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/button_record"
                android:layout_gravity="center"
                android:text="@string/textview_record"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/button_record"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_button"
                app:srcCompat="?android:attr/actionModePasteDrawable" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/innerlayout_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/button_setting"
                android:layout_gravity="center"
                android:text="@string/textview_setting"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/button_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_button"
                app:srcCompat="@android:drawable/ic_menu_preferences" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
